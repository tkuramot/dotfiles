# `git dft` is less to type than `git difftool`.
[alias]
	a = add
	b = branch
	c = commit
	co = checkout
	dft = difftool
	f = fetch
	lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
	lgd = log -p
	lgs = log --stat
	r = rebase
	s = status -s
	sm = submodule
	sw = switch

[color]
	ui = auto

[core]
	editor = vim
	ignorecase = false

[diff]
	external = difft

[fetch]
	prune = true

[grep]
	lineNumer = true

[init]
	defaultBranch = main

[pull]
	rebase = true
	ff = only

[push]
	default = current
	autoSetupRemote = true

[rebase]
	autoStash = true

